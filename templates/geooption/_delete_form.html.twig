<form method="post" action="{{ path('geooption_delete', {'id': geooption.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ geooption.id) }}">
    <button class="btn">Delete</button>
</form>